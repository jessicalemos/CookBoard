@model IEnumerable<cookboard.Models.Ingrediente>
@{
    ViewBag.Title = "getIngredientes";
    string currentType = (string)@ViewData["Type"];

    switch (currentType)
    {
        case "Professor":
            Layout = "~/Views/Shared/_LayoutProfessor.cshtml";
            break;
        case "Aluno":
            Layout = "~/Views/Shared/_LayoutAluno.cshtml";
            break;
    }
}

<h1>
    Lista Ingredientes <input type="button" class="btn btn-light" style="float:right;" value="Localizar Ingredientes" onclick="location.href='@Url.Action("getLocalizacao","LocalIngrediente", new { idReceita = 1 })';" />
</h1>

<hr>

@foreach (var item in Model)
{
    <input type="checkbox"> @Html.DisplayFor(modelItem => item.Nome)
    <br>
}
