@model IEnumerable<cookboard.Models.Receita>
@{
    ViewData["Title"] = "getIngredientes";
}

<h1>Lista Ingredientes</h1>

<table class="table">
    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>

        <td>
            @Html.ActionLink("Localização", "Localização", new { idIngrediente = item.Id })
        </td>
    </tr>
    }
</table>
